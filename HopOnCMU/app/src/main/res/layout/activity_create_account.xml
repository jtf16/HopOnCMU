<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="pt.ulisboa.tecnico.cmov.project.CreateAccountActivity"
    android:background="@drawable/degrade_backgroud_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:textSize="30sp"
            android:textColor="#B8B8B8"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2">
        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="60sp">

            <!-- First Name Label -->
            <EditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext"
                android:hint="@string/firstName"
                android:padding="10sp"
                android:singleLine="true" />

            <!-- Last Name Label -->
            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext"
                android:hint="@string/lastName"
                android:padding="10sp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext"
                android:hint="@string/email"
                android:padding="10sp"
                android:singleLine="true" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.3">
        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="60sp">

            <!-- Username Label -->
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext"
                android:hint="@string/username"
                android:padding="10sp"
                android:singleLine="true" />

            <!-- Password Label -->
            <EditText
                android:id="@+id/password1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext"
                android:hint="@string/password"
                android:padding="10sp"
                android:singleLine="true" />
            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edittext"
                android:hint="@string/passwordConfirm"
                android:padding="10sp"
                android:singleLine="true" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.7">
        </Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="60sp">

            <Button
                android:onClick="accountCreated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:text="@string/signUp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="4"
            android:paddingBottom="150sp" >
        </Space>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:gravity="bottom"
            android:src="@drawable/bottom_image" />
    </LinearLayout>

</RelativeLayout>
